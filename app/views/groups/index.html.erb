<div class="container">
  <div class="row">
    <div class="groups w-100">
      <div class="row mb-4">
          <div class="mx-auto">
            <h2>グループ一覧</h2>
          </div>
          <%= link_to "作成", new_group_path, class: "btn btn-outline-primary ml-auto" %>
      </div>
      <hr>
      <% @groups.each do |group| %>
        <div class="group">
          <div class="group-profile row">
            <%= link_to group_path(group) do %>
              <%= attachment_image_tag group, :image, :fill, 300, 300, fallback: "no_image.jpg", class: "header-profile" %>
              <span class="profile-name"><%= group.name %></span>
            <% end %>
          </div>
        </div>
        <hr>
      <% end %>
    </div>
  </div>
</div>
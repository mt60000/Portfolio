<div class="container">
  <div class="row">
    <div class="groups w-100">
      <div class="row mb-4">
          <div class="mx-auto">
            <div class="row">
              <h2 class="mr-2">グループ一覧</h2>
              <%= link_to "作成", new_group_path, class: "btn btn-outline-primary" %>
            </div>
          </div>
      </div>
      <hr>
      <div class="search-form">
        <%= form_with url: group_search_path, method: :get, local: true do |f| %>
          <%= f.text_field :keyword, value: @keyword %>
          <%= f.submit "検索" %>
        <% end %>
      </div>
      <% @groups.each do |group| %>
        <div class="group">
          <div class="group-profile row">
            <%= link_to group_path(group) do %>
              <%= attachment_image_tag group, :image, :fill, 300, 300, fallback: "no_image.jpg", class: "header-profile" %>
              <span class="profile-name"><%= group.name %></span>
            <% end %>
          </div>
        </div>
        <hr>
      <% end %>
    </div>
  </div>
</div>
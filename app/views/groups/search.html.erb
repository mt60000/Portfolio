<div class="container">
  <div class="row">
    <div class="groups">
      <div class="row mb-4">
        <div>
          <h4>グループ一覧</h4>
        </div>
        <div class="ml-auto">
          <%= link_to "追加", new_group_path, class: "btn btn-outline-primary" %>
        </div>
      </div>
      <% @groups.each do |group| %>
        <div class="group">
          <div class="group-profile row">
            <div class="mr-3">
              <%= attachment_image_tag group, :image, :fill, 300, 300, fallback: "no_image.jpg", class: "header-profile" %>
            </div>
            <div class="mt-3">
              <p><%= link_to group.name, group_path(group) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
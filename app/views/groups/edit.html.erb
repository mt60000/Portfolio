<div class="container">
  <div class="row">
    <%= form_with model: @group, local: true, class: "mx-auto" do |f| %>
      <h2 class="text-center">グループ編集</h2>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :policy %>
        <%= f.text_field :policy, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>
      <div class="from-group">
        <%= f.submit "変更", class: "btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</div>
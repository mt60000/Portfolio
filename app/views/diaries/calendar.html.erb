<%= month_calendar events: @diaries do |date, diaries| %>
  <%= date.day %>
  <% diaries.first(1).each do |diary| %>
    <div class="calendar-mood mb-3 text-center">
      <%= link_to diary_path(diary) do %>
        <%= image_tag(asset_path("/assets/#{diary.mood.image}.jpg"), class: "diary-mood", alt: "mood", size: "70x70") %><br/>
      <% end %>
    </div>
  <% end %>
<% end %>
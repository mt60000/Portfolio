<div class="container mt-3">
  <div>
    <%= form_with model: @diary, local: true do |f| %>
      <h2 class="text-center mb-2">日記編集</h2>
      <%= f.hidden_field :start_time, :value => Time.now %>
      <div class="form-group diary-moods">
        <%= f.radio_button :mood_id, 1 %>
        <%= f.label :mood_id, image_tag(asset_path("/assets/so_bad.jpg"), class: "diary-mood", alt: "mood", size: "90x90"), value: 1 %>
        <%= f.radio_button :mood_id, 2 %>
        <%= f.label :mood_id, image_tag(asset_path("/assets/bad.jpg"), class: "diary-mood", alt: "mood", size: "90x90"), value: 2 %>
        <%= f.radio_button :mood_id, 3 %>
        <%= f.label :mood_id, image_tag(asset_path("/assets/so_so.jpg"), class: "diary-mood", alt: "mood", size: "90x90"), value: 3 %>
        <%= f.radio_button :mood_id, 4 %>
        <%= f.label :mood_id, image_tag(asset_path("/assets/good.jpg"), class: "diary-mood", alt: "mood", size: "90x90"), value: 4 %>
        <%= f.radio_button :mood_id, 5 %>
        <%= f.label :mood_id, image_tag(asset_path("/assets/so_good.jpg"), class: "diary-mood", alt: "mood", size: "90x90"), value: 5 %>
      </div>
      <div class="form-group">
        <%= f.label :keep %>
        <%= f.text_field :keep, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :problem %>
        <%= f.text_field :problem, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :try %>
        <%= f.text_field :try, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :text %>
        <%= f.text_area :text, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>
      <div class="form-group">
        <%= f.submit "保存", class: "btn btn-outline-primary d-block ml-auto" %>
      </div>
    <% end %>
  </div>
</div>
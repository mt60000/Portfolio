<div class="container">
  <h2 class="text-center">お気に入り</h2>
  <div class="row">
    <%= link_to "グループの投稿", favorite_group_diaries_path, class: "btn btn-outline-primary ml-auto" %>
  </div>
  <hr>
  <div class="mt-3">
    <% if @diaries.blank? %>
      <p class="text-center mt-5">お気に入りの投稿はありません</p>
    <% else %>
      <div id="timeline">
        <%= render 'favorite_diary', diaries: @diaries %>
      </div>
      <div class="more text-center my-5">
        <%= link_to_next_page @diaries, "もっと見る", remote: true, id: "timeline_more" %>
      </div>
    <% end %>
  </div>
</div>
<div class="container w-100">
  <div class="row">
    <%= form_with model: @user, local: true, class: "mx-auto" do |f| %>
      <h3 class="text-center mb-3">プロフィール変更</h3>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :policy %>
        <%= f.text_field :policy, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :profile_image %>
        <%= f.file_field :profile_image%>
      </div>
      <div class="form-group">
        <%= f.submit "変更", class: "btn btn-outline-success d-block ml-auto" %>
      </div>

      <div class="form-group">
        <%= link_to "退会する", user_confirm_path, class: "btn btn-outline-danger" %>
      </div>
    <% end %>
  </div>
</div>
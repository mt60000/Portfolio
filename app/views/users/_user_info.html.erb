<div class="container sidebar">
  <div class="profile mb-2">
    <%= link_to attachment_image_tag(current_user, :profile_image, :fill, 300, 300, fallback: "no_image.jpg", class: "profile-image mx-auto"), user_path(current_user) %>
  </div>
  <div class="profile-text">
    <p class="text-center"><%= current_user.name %></p>
    <p class="text-center"><%= current_user.policy %></p>
  </div>
  <div class="row">
    <%= link_to "編集", edit_user_path(current_user), class: "w-100 btn btn-outline-secondary mt-3" %>
  </div>
  <hr>
  <div class="user-group mt-4">
    <% current_user.groups.last(5).each do |group| %>
      <div class="row">
        <div class="mr-3">
          <%= link_to group_group_diaries_path(group) do %>
            <%= attachment_image_tag group, :image, :fill, 400, 400, fallback: "no_image.jpg", class: "header-profile" %>
            <%= group.name %>
          <% end %>
        </div>
      </div>
      <hr>
    <% end %>
    <% unless controller.controller_name == "groups" && controller.action_name == "index" || controller.action_name == "search" %>
      <div class="text-center mb-3">
        <%= link_to 'もっと見る', groups_path(current_user) %>
      </div>
    <% end %>
  </div>
</div>
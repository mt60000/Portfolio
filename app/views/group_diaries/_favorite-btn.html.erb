<% if current_user.group_already_favorited?(group_diary) %>
  <%= link_to group_diary.group_favorites.count, group_diary_group_favorite_path(group_diary, group_diary.group_favorites, group_diary.group), method: :delete, remote: true, class: "fas fa-heart heart-red ml-1 count" %>
<% else %>
  <%= link_to group_diary.group_favorites.count, group_diary_group_favorites_path(group_diary, group_diary.group), method: :post, remote: true, class: "far fa-heart heart ml-1 count" %>
<% end %>
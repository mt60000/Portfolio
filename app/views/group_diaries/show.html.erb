<div class="container">
  <div class="diary">
    <div class="diary-user mb-3">
      <div class="row">
        <div class="mr-3">
          <%= attachment_image_tag @diary.user, :profile_image, :fill, 300, 300, fallback: "no_image.jpg", class: "header-profile" %>
        </div>
        <div class="mt-3">
          <p><%= @diary.user.name %></p>
        </div>
        <%= link_to "編集", edit_diary_path(@diary), class: "btn btn-outline-primary diary-edit" %>
      </div>
    </div>
    <div class="diary-content">
      <div class="mood mb-3 text-center">
        <%= image_tag("/assets/#{@diary.mood.image}.jpg", class: "diary-mood", alt: "mood", size: "120x120") %><br/>
        <%= @diary.mood.image %>
      </div>
      <div class="diary-kpt">
        <p class="mb-3"><%= Diary.human_attribute_name(:keep) %>：<%= @diary.keep %></p>
        <p class="mb-3"><%= Diary.human_attribute_name(:problem) %>：<%= @diary.problem %></p>
        <p class="mb-4"><%= Diary.human_attribute_name(:try) %>：<%= @diary.try %></p>
      </div>
      <div class="diary-text class="mb-3"">
        <p><%= @diary.text %></p>
      </div>
      <div class="diary-img mb-3 text-center">
        <%= attachment_image_tag @diary, :image, :fill, 400, 400, class: "image" %>
      </div>
      <div class="time">
      </div>
      <div class="diary-comment">
        <%= render 'group_comments/form', diary: @diary, comment: @comment %>
        <%= render 'group_comments/comments', diary: @diary, comment: @comment %>
      </div>
    </div>
  </div>
</div>
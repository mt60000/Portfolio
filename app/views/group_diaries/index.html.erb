<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2 class="text-center"><%= @group.name %>の<br/>
      タイムライン</h2>
    </div>
  </div>
  <hr>
  <div>
    <% if @diaries.blank? %>
      <p class="text-center mt-5">投稿はありません</p>
    <% else %>
      <div id="timeline">
        <%= render '/group_diaries/index', diaries: @diaries %>
      </div>
      <div class="more text-center my-5">
        <%= link_to_next_page @diaries, "もっと見る", remote: true, id: "timeline_more" %>
      </div>
    <% end %>
  </div>
</div>
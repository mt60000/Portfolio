<div class="container mt-3">
  <div>
    <%= form_with model: @diary, local: true do |f| %>
      <h2 class="text-center mb-2">日記投稿</h2>
      <hr>
      <%= render 'layouts/errors', model: f.object %>
      <%= f.hidden_field :start_time, :value => Time.now %>
      <%= f.hidden_field :group_id, :value => @diary.group_id %>
      <h4 class="text-center">今日の気分</h4>
      <div class="form-group diary-moods mx-auto">
        <div class="mood-btn">
          <%= f.radio_button :mood_id, 1 %>
          <%= f.label :mood_id, image_tag(asset_path("/assets/さいあく！！.png"), class: "diary-mood", alt: "mood", size: "87x87"), value: 1 %>
        </div>
        <div class="mood-btn">
          <%= f.radio_button :mood_id, 2 %>
          <%= f.label :mood_id, image_tag(asset_path("/assets/いまいち.png"), class: "diary-mood", alt: "mood", size: "87x87"), value: 2 %>
        </div>
        <div class="mood-btn">
          <%= f.radio_button :mood_id, 3 %>
          <%= f.label :mood_id, image_tag(asset_path("/assets/わるくない.png"), class: "diary-mood", alt: "mood", size: "87x87"), value: 3 %>
        </div>
        <div class="mood-btn">
          <%= f.radio_button :mood_id, 4 %>
          <%= f.label :mood_id, image_tag(asset_path("/assets/いいね！.png"), class: "diary-mood", alt: "mood", size: "87x87"), value: 4 %>
        </div>
        <div class="mood-btn">
          <%= f.radio_button :mood_id, 5 %>
          <%= f.label :mood_id, image_tag(asset_path("/assets/さいこう！！.png"), class: "diary-mood", alt: "mood", size: "87x87"), value: 5 %>
        </div>
      </div>
      <hr>
      <div class="form-group">
        <%= f.label :keep %>
        <%= f.text_field :keep, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :problem %>
        <%= f.text_field :problem, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :try %>
        <%= f.text_field :try, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :text %>
        <%= f.text_area :text, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>
      <div class="form-group">
        <%= f.submit "投稿", class: "btn btn-outline-primary d-block ml-auto" %>
      </div>
    <% end %>
  </div>
</div>